footer {
    width: 100%;
    height: 100px;
    background-color: var(--medium-purple);
    color: #FFF;
    font-family: 'Poppins', sans-serif;

    display: flex;
    justify-content: space-between;
    align-items: center;
}

footer > p {
	position:absolute;
    margin-left: 20px;
}

footer > .socialMedia {
    margin-right: 200px;
}

footer > .socialMedia > a {
    text-decoration: none;
    margin-left: 30px;
}

@media screen and (max-width: 766px) {
    @media screen and (min-width: 426px){

        footer > p {
            width: 50%;
            font-size: 10px;
        }

        footer > .socialMedia {
            display: flex;
            width: 50%;
        
            margin-right: 2%;
        }

    }
}